<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh sách lớp học</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container mt-4">
      <h1>Danh sách lớp học</h1>
      <div class="d-flex justify-content-between align-items-center mb-3">
        <a href="/" class="btn btn-secondary">Quay lại</a>
        <form method="GET" class="d-flex gap-2">
          <select name="status" class="form-select" onchange="this.form.submit()">
            <option value="open" <%= status === 'open' ? 'selected' : '' %>>Lớp học đang mở</option>
            <option value="taken" <%= status === 'taken' ? 'selected' : '' %>>Lớp học đã nhận</option>
            <option value="all" <%= status === 'all' ? 'selected' : '' %>>Tất cả lớp học</option>
          </select>
        </form>
      </div>

      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th style="width: 5%">ID</th>
              <th style="width: 15%">Phụ huynh</th>
              <th style="width: 10%">Số điện thoại</th>
              <th style="width: 10%">Khối</th>
              <th style="width: 10%">Môn học</th>
              <th style="width: 10%">Học phí/buổi</th>
              <th style="width: 10%">Trạng thái</th>
              <th style="width: 20%">Thao tác</th>
            </tr>
          </thead>
          <tbody>
            <% classes.forEach(function(classItem) { %>
            <tr>
              <td><%= classItem.id %></td>
              <td><%= classItem.parent_name %></td>
              <td><%= classItem.phone %></td>
              <td><%= classItem.grade_name %></td>
              <td><%= classItem.subject_name %></td>
              <td><%= classItem.fee_per_session.toLocaleString() %>đ</td>
              <td>
                <% if (classItem.status === 'open') { %>
                <span class="badge badge-success">Đang mở</span>
                <% } else if (classItem.status === 'taken') { %>
                <span class="badge badge-warning">Đã nhận</span>
                <% } %>
              </td>
              <td>
                <a
                  href="/class/detail/<%= classItem.id %>"
                  class="btn btn-sm btn-primary"
                  >Xem chi tiết</a
                >
                <% if (classItem.status === 'open' && user && user.role === 'tutor') { %>
                <form
                  action="/class/apply/<%= classItem.id %>"
                  method="POST"
                  style="display: inline"
                >
                  <button type="submit" class="btn btn-sm btn-success">
                    Nhận lớp
                  </button>
                </form>
                <% } %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if (totalPages > 1) { %>
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          <% for(let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === currentPage ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&status=<%= status %>"><%= i %></a>
          </li>
          <% } %>
        </ul>
      </nav>
      <% } %>
    </div>
  </body>
</html>