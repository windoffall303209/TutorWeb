<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body>
    <h1>Admin Dashboard</h1>
    <a href="/" class="btn btn-secondary mb-3">Quay lại</a>
    <div class="row">
      <div class="col-md-4">
        <a href="/admin/users" class="btn btn-primary w-100 mb-3"
          >Quản lý người dùng</a
        >
      </div>
      <div class="col-md-4">
        <a href="/admin/classes" class="btn btn-primary w-100 mb-3"
          >Quản lý lớp học</a
        >
      </div>
      <div class="col-md-4">
        <a href="/admin/tutors" class="btn btn-primary w-100 mb-3"
          >Quản lý gia sư</a
        >
      </div>
    </div>

    <!-- Add containers for the charts -->
    <div class="row">
      <div class="col-md-4">
        <canvas id="userChart"></canvas>
      </div>
      <div class="col-md-4">
        <canvas id="classChart"></canvas>
      </div>
      <div class="col-md-4">
        <canvas id="tutorChart"></canvas>
      </div>
    </div>

    <script>
      // Pass data from EJS to JavaScript
      const userStats = {
        admin: "<%= userStats.admin %>",
        active: "<%= userStats.active %>",
        inactive: "<%= userStats.inactive %>",
        total: "<%= userStats.total %>",
      };

      const classStats = {
        available: "<%= classStats.available %>",
        occupied: "<%= classStats.occupied %>",
        total: "<%= classStats.total %>",
      };

      const tutorStats = {
        active: "<%= tutorStats.active %>",
        inactive: "<%= tutorStats.inactive %>",
        total: "<%= tutorStats.total %>",
      };
    </script>
    <script src="/js/admin/admin-dashboard.js"></script>
  </body>
</html>
