<!-- Trang Liên Hệ -->
<div class="container mt-4 animate__animated animate__fadeIn">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <!-- Header Section -->
      <div class="card shadow-lg border-0 rounded-lg mb-4">
        <div class="card-header bg-primary text-white text-center py-3">
          <h1 class="animate__animated animate__fadeInDown">
            <i class="fas fa-envelope-open-text me-2"></i>Liên Hệ Với Chúng Tôi
          </h1>
        </div>
        <div class="card-body">
          <!-- Bản đồ -->
          <div class="mb-4 animate__animated animate__fadeIn">
            <div class="ratio ratio-16x9 mb-3">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3724.925100932075!2d105.79999667515244!3d20.9806756860498!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135accdd8a1ad71%3A0xa2f9b16036648187!2zNDk1IMSQLiBOZ3V54buFbiBUcsOjaSwgVGhhbmggWHXDom4gTmFtLCBUaGFuaCBYdcOibiwgSMOgIE7hu5lpLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1686762760059!5m2!1svi!2s"
                style="border: 0"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                class="rounded shadow-sm"
              ></iframe>
            </div>
          </div>

          <!-- Thông tin liên hệ -->
          <div class="row mb-4">
            <div class="col-md-6 animate__animated animate__fadeInLeft">
              <div
                class="info-card p-3 bg-light rounded shadow-sm mb-3 hover-card"
              >
                <h3 class="text-primary">
                  <i class="fas fa-info-circle me-2"></i>Thông Tin Liên Hệ
                </h3>
                <hr />
                <ul class="list-unstyled contact-list">
                  <li class="mb-3">
                    <div class="d-flex align-items-center">
                      <div class="icon-circle bg-primary text-white me-3">
                        <i class="fas fa-envelope"></i>
                      </div>
                      <div>
                        <small class="text-muted">Email</small>
                        <div>
                          <a
                            href="mailto:nvuthanh4@gmail.com"
                            class="text-decoration-none"
                            >nvuthanh4@gmail.com</a
                          >
                        </div>
                      </div>
                    </div>
                  </li>
                  <li class="mb-3">
                    <div class="d-flex align-items-center">
                      <div class="icon-circle bg-primary text-white me-3">
                        <i class="fas fa-phone-alt"></i>
                      </div>
                      <div>
                        <small class="text-muted">Số Điện Thoại</small>
                        <div>
                          <a href="tel:0358482955" class="text-decoration-none"
                            >0358482955</a
                          >
                        </div>
                      </div>
                    </div>
                  </li>
                  <li class="mb-3">
                    <div class="d-flex align-items-center">
                      <div class="icon-circle bg-primary text-white me-3">
                        <i class="fas fa-map-marker-alt"></i>
                      </div>
                      <div>
                        <small class="text-muted">Địa Chỉ</small>
                        <div>495 Nguyễn Trãi, Quận Thanh Xuân Nam, Hà Nội</div>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="d-flex align-items-center">
                      <div class="icon-circle bg-primary text-white me-3">
                        <i class="fas fa-clock"></i>
                      </div>
                      <div>
                        <small class="text-muted">Giờ Làm Việc</small>
                        <div>Thứ 2 - Thứ 6, 8:00 AM - 5:00 PM</div>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
            </div>

            <div class="col-md-6 animate__animated animate__fadeInRight">
              <!-- Mạng xã hội -->
              <div
                class="info-card p-3 bg-light rounded shadow-sm mb-3 hover-card"
              >
                <h3 class="text-primary">
                  <i class="fas fa-share-alt me-2"></i>Kết Nối Với Chúng Tôi
                </h3>
                <hr />
                <p>Theo dõi chúng tôi trên mạng xã hội:</p>
                <div
                  class="social-icons d-flex justify-content-center gap-4 mt-4"
                >
                  <a
                    href="https://www.facebook.com"
                    target="_blank"
                    class="social-icon-link"
                  >
                    <div class="social-icon-circle bg-primary">
                      <i class="fab fa-facebook-f text-white"></i>
                    </div>
                    <span>Facebook</span>
                  </a>
                  <a
                    href="https://www.instagram.com"
                    target="_blank"
                    class="social-icon-link"
                  >
                    <div class="social-icon-circle bg-danger">
                      <i class="fab fa-instagram text-white"></i>
                    </div>
                    <span>Instagram</span>
                  </a>
                  <a
                    href="https://zalo.me/123456789"
                    target="_blank"
                    class="social-icon-link"
                  >
                    <div class="social-icon-circle bg-info">
                      <i class="fas fa-comment text-white"></i>
                    </div>
                    <span>Zalo</span>
                  </a>
                </div>
              </div>

              <!-- Đánh giá nhanh -->
              <div class="info-card p-3 bg-light rounded shadow-sm hover-card">
                <h3 class="text-primary">
                  <i class="fas fa-star me-2"></i>Đánh Giá Dịch Vụ
                </h3>
                <hr />
                <div class="rating-container text-center">
                  <div class="stars">
                    <i class="far fa-star star-rating" data-value="1"></i>
                    <i class="far fa-star star-rating" data-value="2"></i>
                    <i class="far fa-star star-rating" data-value="3"></i>
                    <i class="far fa-star star-rating" data-value="4"></i>
                    <i class="far fa-star star-rating" data-value="5"></i>
                  </div>
                  <p class="rating-text mt-2">
                    Hãy đánh giá dịch vụ của chúng tôi
                  </p>
                  <div
                    id="thank-message"
                    class="mt-2 alert alert-success py-1"
                    style="display: none"
                  >
                    <i class="fas fa-check-circle me-1"></i>Cảm ơn bạn đã đánh
                    giá!
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Nút đăng ký -->
          <% if (typeof user !== 'undefined' && user) { %>
          <div class="contact-actions mb-4 animate__animated animate__fadeInUp">
            <h3 class="text-primary mb-3">
              <i class="fas fa-user-plus me-2"></i>Bạn Muốn Làm Gì?
            </h3>
            <div class="d-flex flex-wrap gap-3 justify-content-center">
              <button
                id="tutorRegisterBtn"
                class="btn btn-primary btn-lg action-btn"
              >
                <i class="fas fa-chalkboard-teacher me-2"></i>Đăng ký làm gia sư
              </button>
              <button
                id="classRegisterBtn"
                class="btn btn-success btn-lg action-btn"
              >
                <i class="fas fa-search me-2"></i>Đăng ký tìm gia sư
              </button>
            </div>
          </div>

          <!-- Khu vực hiển thị form -->
          <div id="registerForms" class="animate__animated animate__fadeIn">
            <!-- Form đăng ký làm gia sư -->
            <div id="tutorForm" class="form-container d-none">
              <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                  <h4 class="mb-0">
                    <i class="fas fa-chalkboard-teacher me-2"></i>Đăng Ký Làm
                    Gia Sư
                  </h4>
                </div>
                <div class="card-body">
                  <%- include('tutorRegisterForm', { subjects: subjects, grades:
                  grades }) %>
                </div>
              </div>
            </div>

            <!-- Form đăng ký tìm gia sư -->
            <div id="classForm" class="form-container d-none">
              <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                  <h4 class="mb-0">
                    <i class="fas fa-search me-2"></i>Đăng Ký Tìm Gia Sư
                  </h4>
                </div>
                <div class="card-body">
                  <%- include('classRegisterForm', { subjects: subjects, grades:
                  grades }) %>
                </div>
              </div>
            </div>
          </div>
          <% } else { %>
          <div
            class="text-center p-4 bg-light rounded shadow-sm animate__animated animate__bounceIn"
          >
            <h3>
              <i class="fas fa-user-lock text-primary me-2"></i>Vui lòng đăng
              nhập để đăng ký
            </h3>
            <p class="mb-3">
              Bạn cần đăng nhập để có thể đăng ký làm gia sư hoặc tìm gia sư
            </p>
            <a href="/auth/login" class="btn btn-primary btn-lg">
              <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập ngay
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

