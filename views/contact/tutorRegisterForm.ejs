<div class="form-header">
  <h2 class="form-title">Đăng ký làm gia sư</h2>
  <button type="button" class="close-form-btn" data-form="tutorForm">
    &times;
  </button>
</div>

<form
  action="/tutors/register"
  method="POST"
  enctype="multipart/form-data"
  class="contact-form"
  id="tutorForm"
>
  <div class="mb-3">
    <label for="photo" class="form-label">Ảnh</label>
    <input
      type="file"
      class="form-control"
      id="photo"
      name="photo"
      accept="image/*"
      required
    />
  </div>

  <div class="mb-3">
    <label for="full_name" class="form-label">Họ tên</label>
    <input
      type="text"
      class="form-control"
      id="full_name"
      name="full_name"
      required
    />
  </div>

  <div class="mb-3">
    <label for="phone" class="form-label">Số điện thoại</label>
    <input type="tel" class="form-control" id="phone" name="phone" required />
  </div>

  <div class="mb-3">
    <label for="birth_year" class="form-label">Năm sinh</label>
    <input
      type="number"
      class="form-control"
      id="birth_year"
      name="birth_year"
      required
    />
  </div>

  <div class="mb-3">
    <label for="gender" class="form-label">Giới tính</label>
    <select class="form-select" id="gender" name="gender">
      <option value="male">Nam</option>
      <option value="female">Nữ</option>
      <option value="other">Khác</option>
    </select>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <label for="province" class="form-label">Thành phố</label>
        <select
          class="form-select"
          id="province"
          name="province"
          required
        ></select>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <label for="district" class="form-label">Quận</label>
        <select
          class="form-select"
          id="district"
          name="district"
          required
        ></select>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <label for="address" class="form-label">Địa chỉ</label>
    <input
      type="text"
      class="form-control"
      id="address"
      name="address"
      required
    />
  </div>

  <div class="mb-3">
    <label for="education_level" class="form-label">Trình độ học vấn</label>
    <select
      class="form-select"
      id="education_level"
      name="education_level"
      required
    >
      <option value="high_school">Tốt nghiệp THPT</option>
      <option value="university">Đại học</option>
      <option value="graduater">Sau đại học</option>
    </select>
  </div>

  <!-- Môn học có thể dạy -->
  <div class="mb-3">
    <label class="form-label">Môn học có thể dạy</label>
    <div class="row">
      <% subjects.forEach(function(subject) { %>
      <div class="col-md-4 mb-2">
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="subjectIds[]"
            value="<%= subject.id %>"
            id="subject_<%= subject.id %>"
          />
          <label class="form-check-label" for="subject_<%= subject.id %>">
            <%= subject.name %>
          </label>
        </div>
      </div>
      <% }); %>
    </div>
  </div>

  <!-- Khối lớp có thể dạy -->
  <div class="mb-3">
    <label class="form-label">Khối lớp có thể dạy</label>
    <div class="row">
      <% grades.forEach(function(grade) { %>
      <div class="col-md-4 mb-2">
        <div class="form-check">
          <input
            class="form-check-input"
            type="checkbox"
            name="gradeIds[]"
            value="<%= grade.id %>"
            id="grade_<%= grade.id %>"
          />
          <label class="form-check-label" for="grade_<%= grade.id %>">
            <%= grade.name %>
          </label>
        </div>
      </div>
      <% }); %>
    </div>
  </div>

  <div class="mb-3">
    <label for="introduction" class="form-label">Giới thiệu về bản thân</label>
    <textarea
      class="form-control"
      id="introduction"
      name="introduction"
      placeholder="Giới thiệu chi tiết về bản thân"
      rows="3"
      required
    ></textarea>
  </div>

  <button type="submit" class="btn btn-primary w-100">Gửi</button>
</form>
