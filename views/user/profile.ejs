<body class="bg-light">
  <div class="container py-5">
    <div class="card shadow mx-auto" style="max-width: 800px">
      <div class="card-header bg-primary text-white">
        <h3 class="text-center mb-0">Thông tin cá nhân</h3>
      </div>
      <div class="card-body">
        <% if (locals.message) { %>
        <div
          class="alert alert-<%= locals.messageType || 'info' %> alert-dismissible fade show"
          role="alert"
        >
          <%= message %>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
        <% } %>

        <div class="row mb-4">
          <div class="col-md-4 text-center">
            <div class="mb-3">
              <i class="fas fa-user-circle fa-6x text-primary"></i>
            </div>
            <h4><%= user.display_name %></h4>
            <span
              class="badge bg-<%= user.role === 'admin' ? 'danger' : user.role === 'tutor' ? 'success' : 'info' %>"
            >
              <%= user.role === 'admin' ? 'Quản trị viên' : user.role ===
              'tutor' ? 'Gia sư' : 'Người dùng' %>
            </span>
          </div>
          <div class="col-md-8">
            <ul class="list-group">
              <li class="list-group-item">
                <strong><i class="fas fa-user me-2"></i>Tên đăng nhập:</strong>
                <%= user.username %>
              </li>
              <li class="list-group-item">
                <strong><i class="fas fa-shield-alt me-2"></i>Vai trò:</strong>
                <%= user.role === 'admin' ? 'Quản trị viên' : user.role ===
                'tutor' ? 'Gia sư' : 'Người dùng' %>
              </li>
              <li class="list-group-item">
                <strong
                  ><i class="fas fa-calendar-alt me-2"></i>Ngày tạo:</strong
                >
                <%= user.created_at %>
              </li>
              <% if (user.email) { %>
              <li class="list-group-item">
                <strong><i class="fas fa-envelope me-2"></i>Email:</strong> <%=
                user.email %>
              </li>
              <% } %> <% if (user.phone) { %>
              <li class="list-group-item">
                <strong><i class="fas fa-phone me-2"></i>Số điện thoại:</strong>
                <%= user.phone %>
              </li>
              <% } %>
            </ul>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="d-flex justify-content-center gap-3">
              <a href="/user/edit-profile" class="btn btn-primary">
                <i class="fas fa-user-edit me-1"></i> Chỉnh sửa thông tin
              </a>
              <a
                href="/user/change-password"
                class="btn btn-warning text-white"
              >
                <i class="fas fa-key me-1"></i> Đổi mật khẩu
              </a>
              <a href="/user/classes" class="btn btn-success">
                <i class="fas fa-chalkboard me-1"></i> Chỉnh sửa thông tin lớp
                học
              </a>
              <a href="/user/tutors" class="btn btn-info text-white">
                <i class="fas fa-user-graduate me-1"></i> Chỉnh sửa thông tin
                gia sư
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
